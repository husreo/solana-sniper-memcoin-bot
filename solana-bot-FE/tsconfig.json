{
  "compilerOptions": {
    "baseUrl": "./src", // Set the base directory for resolving paths
    "paths": {
      "@component/*": [
        "component/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Absolute Import */
  },
  "include": [
    "src",
    "./setupTest.ts"
  ],
  // "references": [{ "path": "./tsconfig.node.json" }]
}